<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:wave="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".SplashActivity">



    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/lottie_heartsignal"
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:layout_gravity="center_horizontal"
        app:lottie_autoPlay="true"
        app:lottie_rawRes="@raw/anim_heart_signal"/>

    <com.thoughtbot.stencil.StencilView
        android:id="@+id/stencil_welcome"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sv_strokeColor="@android:color/darker_gray"
        app:sv_text="Welcome"
        app:sv_textSize="24sp"
        app:sv_strokeWidth="10" />

    <com.thoughtbot.stencil.StencilView
        android:id="@+id/stencil_to"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sv_strokeColor="@android:color/darker_gray"
        app:sv_text="To"
        app:sv_textSize="24sp"
        app:sv_strokeWidth="10" />

    <com.thoughtbot.stencil.StencilView
        android:id="@+id/stencil_heartSignal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:sv_strokeColor="@android:color/darker_gray"
        app:sv_text="HeartSignal"
        app:sv_textSize="24sp"
        app:sv_strokeWidth="10" />

